generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user { 
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique // Mantém email único sem ser chave primária
  name      String
  nameUser  String?   
  password  String
  image     String?  
  banner    String?  
  bio       String?  
  location  String?  
  posts     post[]   @relation("UserPosts")
}

model post { 
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String?
  image     String?
  comment   String?
  createdAt DateTime @default(now())
  userEmail String  // Tornando o campo userEmail obrigatório
  user      user    @relation(fields: [userEmail], references: [email], name: "UserPosts") // Relação com user
}
